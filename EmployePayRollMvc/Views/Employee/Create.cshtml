                    </div>
                    <span asp-validation-for="ProfileImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="d-flex flex-row">
                        <label asp-for="Gender" class="control-label " style="margin-right:60px;margin-left:15px;"></label>
                        @* <input asp-for="Gender" class="form-control" /> *@

                        <div class="ml-4">
                            <div class="d-flex flex-row">
                                <div class="ml-2 mr-2" style="margin-right:50px;">
                                    @Html.RadioButtonFor(model => model.Gender, "Male")
                                    Male
                                </div>
                                <div clas="ml-3 mr-2">
                                    @Html.RadioButtonFor(model => model.Gender, "Female")
                                    Female
                                </div>
                            </div>
                        </div>
                    </div>
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <div class="d-flex ">
                        <label asp-for="Department" class="control-label" style="margin-right:30px;"></label>
                        <div style="width:100%;">
                        @Html.DropDownListFor(empModel => empModel.Department, new SelectList(new[]
                                 {
                        new SelectListItem { Text = "IT", Value = "IT" },
                        new SelectListItem { Text = "HR", Value = "HR" },
                        new SelectListItem { Text = "Finance", Value = "Finance" },
                        new SelectListItem { Text = "Others", Value = "Others" }
                        }, "Value", "Text"), "-- Select Department --", new { @class = "form-control" })
                        @Html.ValidationMessageFor(empModel => empModel.Department, "", new { @class = "text-danger" })
                    </div>
