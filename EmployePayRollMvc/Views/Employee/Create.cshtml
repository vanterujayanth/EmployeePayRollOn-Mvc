                <div class="form-group m-3">
                    <div class="d-flex ">
                        <label asp-for="Salary" class="control-label" style="margin-right:50px"></label>
                        <input asp-for="Salary" class="form-control" style="margin-left:20px" placeholder="Enter your salary" />
                    </div>
                    <span asp-validation-for="Salary" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <div class="d-flex ">
                        <label asp-for="StartDate" class="control-label" style="margin-right:46px"></label>
                        <input asp-for="StartDate" class="form-control" />
                    </div>
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <div class="d-flex ">
                        <label asp-for="Notes" class="control-label" style="margin-right:50px; margin-top:20px;"></label>
                        <input asp-for="Notes" class="form-control" style="margin-left:20px; height:80px;" />
                    </div>
                    <span asp-validation-for="Notes" class="text-danger"></span>
                </div>
