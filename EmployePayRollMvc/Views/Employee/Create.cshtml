                        <input asp-for="Name" class="form-control ml-5" style="margin-left:30px; margin-right:5px;" placeholder="Enter your name" />

                    </div>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group m-3">
                    <div class="d-flex flex-row">

