                        @* <input asp-for="ProfileImage" class="form-control" /> *@

                        @Html.RadioButtonFor(x => x.ProfileImage, Url.Content("~/asserts/assert1.jpg"))
                        <img src="~/asset/rollimg1.png" class="img  p-3" />
                        @Html.RadioButtonFor(x => x.ProfileImage, Url.Content("~/asserts/assert2.jpg"))
                        <img src="~/asset/rollimg2.png" class="img  p-3" />
                        @Html.RadioButtonFor(x => x.ProfileImage, Url.Content("~/asserts/assert3.jpg"))
                        <img src="~/asset/rollimg4.png" class="img  p-3" />
                        @Html.RadioButtonFor(x => x.ProfileImage, Url.Content("~/asserts/rollimg1.png"))
